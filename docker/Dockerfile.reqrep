# Dockerfile for Request-Reply (ZeroMQ) implementation
FROM python:3.9-slim

WORKDIR /app

# Install ZeroMQ
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    libzmq3-dev && \
    rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir pyzmq==25.1.1

# Copy implementation files
COPY reqrep_implementation/ ./reqrep_implementation/
COPY data/ ./data/

# Default command
CMD ["python", "reqrep_implementation/server.py"]
