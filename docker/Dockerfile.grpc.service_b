FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY services/ ./services/
COPY data/ ./data/
COPY grpc_implementation/proto/ ./grpc_implementation/proto/
COPY generate_proto.py .

RUN python generate_proto.py

COPY grpc_implementation/server/service_b_mapreduce_grade.py ./grpc_implementation/server/

RUN mkdir -p grpc_implementation/server/generated && \
    cp grpc_implementation/server/generated/*.py grpc_implementation/server/generated/ || true

ENV SERVICE_PORT=50052
ENV SERVICE_C_ADDRESS=service-c:50053

EXPOSE 50052

CMD ["python", "grpc_implementation/server/service_b_mapreduce_grade.py"]
